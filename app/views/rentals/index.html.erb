<div class="container-dashboard">

    <div class="header-dashboard">
      <div id="image-header-dashboard">
        <% if current_user %>
          <%= image_tag current_user.image_url, class: "user-picture" %>
        <% end %>
      </div>
      <div class="text-header-dashboard">
        <h1 style="font-size: 24px; margin-left: 15px;font-weight: 700;"> <span style="color: #329190;"> Ton statut : </span><%= @user.status.gsub(/_/,' ') %></h1>
        <h2 style="font-size: 20px; margin-left: 15px; color:#B1E4E3; font-weight: 700;">Consignes en cours : <%= @total %><h2>
      </div>
    </div>

    <div class="menu-dashboard-statut">
      <ul>
        <li id="encours">En cours</li><span class="-count"><%= @total %></span>
        <li id="rendu"> Rendu </li>
        <li id="paye"> Payé </li>
      </ul>
    </div>

    <div class="tab-content" id="pills-tabContent" >
        <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
            <h2 id="dash-menu-info-text"> Détails des consignes en cours</h2>
            <div class="big-div-shops">
                <div class="aligner">
                    <% @actuals.each do |actual| %>
                    <div class="number-consigne-span"><%= actual.total_of_box %></div>
                        <div class="dash-card">
                            <div class="div-shop-item dash-shop-pic">
                                <%= cl_image_tag actual.shop.photo.key, :transformation=>[
                                {:gravity=>"face", :height=>500, :width=>400, :crop=>"crop"},
                                {:radius=>"50"},
                                {:width=>100, :crop=>"scale"}
                                ] %>
                            </div>
                            <div class="div-shop-item">
                                <h4 class="nom-restaurant-dashboard" style="font-weight: 600"><%= actual.shop.name %></h4>
                                <p>Nombre de consignes: <%= actual.total_of_box %></p>
                                <p>A rendre avant le: <%= actual.rental_time_end %></p>
                                <div class="button-dashboard-card">
                                    <div id="button-fiche">
                                    <%= link_to "Voir la fiche", shops_path, class: "btn btn-info dash-info-button" %>
                                    </div>
                                    <div id="button-comment">
                                    <button type="button" class="btn btn-info dash-comment-button" data-toggle="modal" data-target="#Modalrating">
                                        Je note</button>
                                    </div>
                                    <div class="modal fade" id="Modalrating" role="dialog" aria-labelledby="ModalreviewLabel" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <div>
                                                        <h3 class="modal-title">Donne ton avis sur</h3>
                                                        <h3 style="color: #FFBD36"><%= actual.shop.name %></h3>
                                                    </div>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <%= simple_form_for [actual.shop, actual, @rating] do |f| %>
                                                    <p style="text-align: center">Ecris ton avis <span style="color: #FFBD36">ici... </p>
                                                    <%= f.input :content, placeholder: "J'adore ce commerçant..." %>
                                                    <p style="text-align: center">Et ta note <span style="color: #FFBD36">là...</span></p>
                                                    <div class="star-note"><%= f.input :rating, collection: (1..5).to_a %></div>
                                                    <%= f.submit "Je valide", class: "btn btn-block btn-info" %>
                                                    <% end %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
            <h2> Détails des consignes rendues</h2>
        </div>
        <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
            <h2> Détails des consignes payées</h2>
        </div>
    </div>
</div>
